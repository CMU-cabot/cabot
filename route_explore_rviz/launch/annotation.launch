<!--
  Used for visualising turtlebot in action.  
  
  It requires minimal.launch and optionally 3dsensor.launch to already be up and running.
 -->
<launch>
  <arg name="annotation_file" default=""/>
  <arg name="map_file" default=""/>
  
  <node name="static_publisher" pkg="tf" type="static_transform_publisher"
	args="0 0 0 0 0 0 map base 0"/>

  <node name="map" pkg="map_server" type="map_server"
	args="$(arg map_file)" />

  <node name="rviz" pkg="rviz" type="rviz" output="screen"
	args="-d $(find route_explore_rviz)/config/annotation.rviz">
    <param name="annotation_file" value="$(arg annotation_file)" />
  </node>
</launch>
