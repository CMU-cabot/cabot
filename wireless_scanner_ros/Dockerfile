ARG FROM_IMAGE=ros:kinetic-ros-core-xenial
FROM $FROM_IMAGE AS cache

ENV ROS_DISTRO=kinetic
ARG TZ="Etc/UTC"
ENV TZ=$TZ
RUN ln -snf /usr/share/zoneinfo/$TZ /etc/localtime && echo $TZ > /etc/timezone

## install dependencies

RUN apt update && \
	apt-get install -y ros-${ROS_DISTRO}-rosbridge-suite && \
	apt-get install -y nodejs-legacy npm python-pip iw && \
	apt-get install -y python-gi python-dbus \
	&& \
	rm -rf /var/lib/apt/lists/*


ENV OVERLAY_WS=/opt/overlay_ws
ENV INSTALL_DIR=$OVERLAY_WS/src
ENV PACKAGE=wireless_scanner_ros

## install pip and npm dependencies
RUN mkdir -p $INSTALL_DIR/$PACKAGE
ADD requirements.txt $INSTALL_DIR/$PACKAGE
ADD package.json $INSTALL_DIR/$PACKAGE

WORKDIR $INSTALL_DIR/$PACKAGE
RUN pip install -r requirements.txt && \
	npm install

## copy source
ADD . $INSTALL_DIR/$PACKAGE

## catkin_make
WORKDIR $OVERLAY_WS
RUN . /opt/ros/$ROS_DISTRO/setup.sh && \
	catkin_make

## set wifi interface name
ARG WIFI_INTERFACE=wlp4s0
ENV WIFI_INTERFACE=$WIFI_INTERFACE

# install entrypoint
COPY docker-entrypoint.sh /usr/local/bin/
RUN ln -s /usr/local/bin/docker-entrypoint.sh

ENTRYPOINT [ "docker-entrypoint.sh" ]
