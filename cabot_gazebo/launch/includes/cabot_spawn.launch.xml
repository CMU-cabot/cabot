<launch>
  <arg name="extended" default="0"/>
  <arg name="offset" default="0"/>
  <arg name="robot" default="cabot" />

  <arg name="urdf_file" default="$(find xacro)/xacro --inorder '$(find cabot_description)/robots/$(arg robot)_zed_hokuyo.urdf.xacro' extended:=$(arg extended) offset:=$(arg offset)"/>
  <param name="robot_description" command="$(arg urdf_file)" />

  <node name="spawn_cabot_model" pkg="gazebo_ros" type="spawn_model"
        args="$(optenv ROBOT_INITIAL_POSE) -unpause -urdf -param robot_description -model mobile_base"/>

</launch>
